<form method="post" action="{{ path('app_admin_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Are you sure you want to delete this tag? This action cannot be undone.');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button type="submit" class="btn btn-outline-danger">Delete</button>
</form>
