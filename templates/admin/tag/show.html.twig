{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }} - Admin{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <a href="{{ path('app_admin_tag_index') }}" class="text-decoration-none text-muted mb-3 d-inline-block">
            ‚Üê Back to tags
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card admin-card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h2 class="h4 mb-0">Tag Details</h2>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-muted">ID:</dt>
                    <dd class="col-sm-9"><code>{{ tag.id }}</code></dd>
                    
                    <dt class="col-sm-3 text-muted">Name:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-secondary fs-6">{{ tag.name }}</span>
                    </dd>
                </dl>
            </div>
            <div class="card-footer bg-white border-top">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_admin_tag_index') }}" class="btn btn-outline-secondary">Back to list</a>
                    <div>
                        <a href="{{ path('app_admin_tag_edit', {'id': tag.id}) }}" class="btn admin-btn-primary text-white me-2">Edit</a>
                        {{ include('admin/tag/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
