{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <a href="{{ path('app_post_list') }}" class="text-decoration-none text-muted mb-3 d-inline-block">
            ‚Üê Back to posts
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-8 mx-auto">
        <article class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">
                <h1 class="display-5 fw-bold mb-4">{{ post.title }}</h1>
                
                <div class="d-flex align-items-center text-muted small mb-4 pb-3 border-bottom">
                    {% if post.author %}
                        <span class="me-3">
                            <strong>Author:</strong> {{ post.author.firstname ?? '' }} {{ post.author.lastname ?? '' }}
                        </span>
                    {% endif %}
                    {% if post.publishedAt %}
                        <span class="me-3">
                            <strong>Published:</strong> {{ post.publishedAt|date('F j, Y') }}
                        </span>
                    {% endif %}
                    {% if post.updatedAt and post.updatedAt != post.publishedAt %}
                        <span>
                            <strong>Updated:</strong> {{ post.updatedAt|date('F j, Y') }}
                        </span>
                    {% endif %}
                </div>
                
                {% if post.tags|length > 0 %}
                    <div class="mb-4">
                        {% for tag in post.tags %}
                            <span class="badge bg-secondary me-1 mb-2">{{ tag.name }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
                
                <div class="post-content">
                    {{ post.content|nl2br }}
                </div>
            </div>
        </article>
        
        <div class="text-center mt-4">
            <a href="{{ path('app_post_list') }}" class="btn btn-outline-primary">Back to all posts</a>
        </div>
    </div>
</div>
{% endblock %}

