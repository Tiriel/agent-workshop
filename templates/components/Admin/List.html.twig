<div class="card admin-card shadow-sm border-0 rounded rounded-1">
    <div class="card-body p-0">
        {% set small = this.columns|length < 3 %}
        <div class="table-responsive {{ small ? ' w-50 me-auto px-3' }}">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                <tr>
                    {% for column, nullable in this.columns %}
                        <th>{{ column|humanize }}</th>
                    {% endfor %}
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in this.entities %}
                    <twig:Admin:ListRow :entity="entity" :entityName="entityName" :columns="this.columns"/>
                {% else %}
                    <div class="card admin-card shadow-sm border-0">
                        <div class="card-body text-center py-5">
                            <p class="text-muted mb-0">No entities found. <a href="{{ path("app_admin_#{entityName}_new") }}">Create your first post</a>.</p>
                        </div>
                    </div>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="p-3 d-flex justify-content-center{{ small ? ' w-50 me-auto' }}">
            {{ pagerfanta(this.entities) }}
        </div>
    </div>
</div>
