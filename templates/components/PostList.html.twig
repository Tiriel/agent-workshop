{% props posts = [] %}
<div class="row g-4 mb-4">
    {% for post in posts %}
        <div class="col-12">
            <a href="{{ path('app_post_show', {id: post.id}) }}" class="text-decoration-none text-reset">
                <div class="card h-100 shadow-sm border-0 post-card">
                    <div class="card-body">
                        <h2 class="card-title h4 mb-3">{{ post.title }}</h2>

                        <div class="d-flex align-items-center text-muted small mb-3">
                            {% if post.author %}
                                <span class="me-3">
                                        {{ post.author.firstname ?? '' }} {{ post.author.lastname ?? '' }}
                                    </span>
                            {% endif %}
                            {% if post.publishedAt %}
                                <span>
                                        {{ post.publishedAt|date('F j, Y') }}
                                    </span>
                            {% endif %}
                        </div>

                        <p class="card-text text-muted">
                            {{ post.content|slice(0, 200) }}{% if post.content|length > 200 %}...{% endif %}
                        </p>

                        {% if post.tags|length > 0 %}
                            <div class="mt-3">
                                {% for tag in post.tags %}
                                    <span class="badge bg-secondary me-1">{{ tag.name }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
